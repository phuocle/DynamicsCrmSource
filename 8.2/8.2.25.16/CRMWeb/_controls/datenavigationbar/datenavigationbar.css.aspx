<%@ Page Language="c#" Inherits="Microsoft.Crm.Common.Application.Pages.Common.CrmStyles" CodeBehind="Microsoft.Crm.Application.Pages.dll" %>
<%@ Import Namespace="Microsoft.Crm.Application.Utility" %>


TABLE.ms-crm-Cal-Month-Nav
{
width:				100%;
height:				100%;
table-layout:		fixed;
border-collapse:	collapse;
}

SPAN.ms-crm-Cal-Month-Nav-Button:hover
{
cursor:				pointer;
padding:			2px;
border:				1px solid #6699cc;
height:				auto;
display:			inline-block;
}
SPAN.ms-crm-Cal-Month-Nav-Button
{
cursor:				pointer;
padding:    		3px;
height:				auto;
display:			inline-block;
}

SPAN.ms-crm-Cal-Month-Inactive-Button
{
cursor: default!important;
border: none!important;
padding: 3px;
height: auto;
display: inline-block;
}


TR.ms-crm-Cal-Month-Nav
{
height:				23px;
}

TD.ms-crm-Cal-Month-Nav
{
text-align:			center;
vertical-align:		middle;
border-width:		1px;
border-style:		solid;
border-bottom:		0px;
height:				22px;
}

img.ms-crm-Cal-Month-Nav-Icon
{
width:				16px;
height:				16px;
vertical-align:		top;
border:				0px;
}
