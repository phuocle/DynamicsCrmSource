<%@ Page Language="c#" Inherits="Microsoft.Crm.Common.Application.Pages.Common.CrmStyles" %>
<%@ Import Namespace="Microsoft.Crm.Application.Utility" %>

DIV.feFilterEditor
{
width: 100%;
height: 100%;
background-color: #EAF3FF;
border-width: 1px;
border-style: solid;
position: absolute;
overflow-x: hidden;
overflow-y: auto;
}

DIV.feAFControls
{
overflow-x: hidden;
overflow-y: auto;
}

DIV.feMessage
{
width: 100%;
height: 100%;
padding: 20px 20px 20px 20px;
vertical-align: middle;
text-align: center;
}

DIV.feEntityHeadingBar
{
height: 25px;
padding-right: 3px;
padding-left: 3px;
}

TABLE.feEntityHeading
{
height: 100%;
vertical-align: middle;
}

TR.feEntityHeadingText
{
height: 100%;
vertical-align: middle;
padding-right: 5px;
padding-left: 5px;
}


DIV.ms-crm-ActionBar
{
border-left-style: none !important;
border-right-style: none !important;
border-bottom-width: 1px;
border-bottom-style: solid;
}

.feAFControls
{
vertical-align:top;
background-color: #FFFFFF;
border-width: 1px;
border-style: solid;
}
