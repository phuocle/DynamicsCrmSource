<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true">

  <!-- Use below one for debugging-->
  <!--nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true" 
      internalLogLevel="Trace" 
      internalLogFile="c:\temp\nlog-internal.log"-->

  <extensions>
    <add assembly="Microsoft.Xrm.Log"/>
  </extensions>

  <targets>
    <target name="XrmTraceETWTarget" xsi:type="XrmTraceETWTarget" />

    <target name="DataProviderExecutionETWTarget" xsi:type="DataProviderExecutionETWTarget" />

    <target name="XrmTraceFileTarget" xsi:type="File"
        layout="${longdate}|${logger}|${level:uppercase=true}|${message}|${all-event-properties}|${exception:format=tostring}"
        fileName="${basedir}/logs/logfile.txt"
        archiveFileName="${basedir}/archives/log.{#####}.txt"
        archiveAboveSize="1024000"
        archiveNumbering="Sequence"
        concurrentWrites="true"
        keepFileOpen="false"
        encoding="iso-8859-2" />
  </targets>

  <rules>
    <!-- Add custom rule here -->
    <logger name="Microsoft.Xrm.DataProvider*" minLevel="Debug" writeTo="DataProviderExecutionETWTarget" final="true"/>
    <logger name="Microsoft.Xrm.DataPipeline" minLevel="Debug" writeTo="DataProviderExecutionETWTarget" final="true"/>

    <!-- Add default XrmTrace logging rule "*" here if you want to override in production-->

  </rules>
</nlog>