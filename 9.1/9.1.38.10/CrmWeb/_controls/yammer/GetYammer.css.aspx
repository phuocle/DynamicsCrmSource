<%@ Page Language="c#" Inherits="Microsoft.Crm.Common.Application.Pages.Common.CrmStyles" CodeBehind="Microsoft.Crm.Application.Pages.dll" %>
<%@ Import Namespace="Microsoft.Crm.Application.Pages.Common" %>
<%@ Import Namespace="Microsoft.Crm.Application.Utility" %>

.getYammerHolder a,
.getYammerHolder a:visited,
.getYammerHolder a:active,
.getYammerHolder a:link,
.getYammerHolder a:hover
{
text-decoration: none !important;
font-weight: 600;
color: #949494 !important;
background-color: transparent !important;
line-height: 13px;
}

.getYammerHolder a img
{
vertical-align: top;
}

.getYammerContent span
{
font-size: 12px;
}

.getYammerOptionContent
{
display: none;
background: #fff;
}

.ui-flyout-dialog .getYammerCloseText a,
.ui-flyout-dialog .getYammerCloseText a:visited,
.ui-flyout-dialog .getYammerCloseText a:active,
.ui-flyout-dialog .getYammerCloseText a:link,
.ui-flyout-dialog .getYammerCloseText a:hover
{
text-decoration: none !important;
color: black !important;
}

.ui-flyout-dialog .getYammerOptionContent
{
padding-right: 0px !important;
padding-left: 0px !important;
}

div.getYammerOptionContent .getYammerCloseText
{
width: auto;
max-width: 125px;
height: auto;
background-color: #FDFDFD;
border: 1px solid #C6C6C6;
cursor: pointer;
background-image: none;
text-align: center;
overflow: visible;
color: #262626;

padding: 1px 9px;
font-size: 9px;
font-weight: normal;
border: 1px solid #949494;
}

div.getYammerOptionContent .getYammerCloseText:hover
{
background-color: #CDE6F7;
border-color: #92C0E0;
border-width: 1px;
}

.getYammerOptionButtons
{
margin: 12px 12px 12px;
direction: rtl;
}

.getYammerTextContent
{
display: block;
margin: 9px 9px 9px;
}
